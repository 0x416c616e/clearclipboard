{
    "name": "Clear Clipboard",
    "version": "1.0",
    "description": "Click it to clear your clipboard",
	"permissions": [
		"storage",
		"clipboardWrite"
	],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
		"default_icon": "icon.png"
	},
	"permissions": [
		"activeTab"
	],
    "manifest_version": 2
  }
